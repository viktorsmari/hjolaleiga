<p id="notice"><%= notice %></p>

<h1>Listing Bicycles</h1>

<%= link_to "Show all",  bicycles_path %>

<table class="table table-striped table-bordered table-hover table-sm">
  <thead class="thead-inverse">
    <tr>
      <th>ID</th>
      <th>Info</th>
      <th>Category</th>
      <th>Gears</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody>
    <% @bicycles.each do |bicycle| %>
      <tr>
        <td><%= bicycle.id %></td>
        <td><%= link_to bicycle.info, bicycle %></td>
        <td><%= link_to bicycle.category.try(:name), bicycles_path(:category => bicycle.category.id) %></td>
        <td><%= bicycle.gears %></td>
        <td><%= bicycle.price %></td>
        
        <td>
          <div class="btn-group">
            <%= link_to 'Book now!', new_rental_path(:bike => bicycle), :class => "btn btn-success" %> 
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bicycle', new_bicycle_path %>
